@page
@model Golfclubmembership.Pages.ViewClubCardsModel
@{
}
<style>
    .pictures {
        text-align: center;
        width: 50%;
        height: 50%;
    }

        .pictures img {
            height: 100%;
            width: 80%;
        }

    .details {
    }

    .dot1 {
        cursor: pointer;
        height: 25px;
        width: 25px;
        margin: 0 2px;
        background-color: #A9D2E5;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .dot2 {
        cursor: pointer;
        height: 25px;
        width: 25px;
        margin: 0 2px;
        background-color: whitesmoke;
        border-color: black;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .dot3 {
        cursor: pointer;
        height: 25px;
        width: 25px;
        margin: 0 2px;
        background-color: #F6DDDD;
        border-color: gray;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .button {
        background-color: #4CAF50; 
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

    .pictures video{
        height:40%;
        width:80%;
        margin-top:4%;
    }


    .button a{
        text-decoration:none;
        color:white;
    }
</style>
<body>
    <form method="post">
        <section style="display:flex;">
            <section class="pictures">
                <img src="./images/@Model.ClubCards.Image" />
            </section>
            <section class="details">
                <h5 style="font-weight:bold">@Model.ClubCards.Title</h5>
                <p>STYLE# @Model.ClubCards.Id</p>
                <hr />
                <p style="font-size:20px;">GBP @Model.ClubCards.Price</p>
                <section style="display:flex">
                    <span>COLORS:</span>
                    <span class="dot1">

                    </span>
                    <span class="dot2">

                    </span>
                    <span class="dot3">

                    </span>
                </section>
                <hr>
                <p>Description:</p>
                <p>@Model.ClubCards.Description</p>
                <p style="font-weight:bold;font-style:italic;color:deeppink">Free delivery on orders above £25</p>
                <input type="submit" class="button" value="Add to Cart" asp-route-id="@Model.ClubCards.Id" />
            </section>


        </section>
    </form>
</body>
